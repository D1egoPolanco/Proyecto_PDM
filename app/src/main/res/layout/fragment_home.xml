<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/background_app"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/iv_logoMain"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_margin="@dimen/margin_view"
        android:src="@drawable/dExample" />

    <TextView
        android:id="@+id/tv_EmailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_view"
        android:text="Ingrese su correo:"
        android:textSize="@dimen/text_main"
        android:textColor="@color/text"/>

    <EditText
        android:id="@+id/ed_EmailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_view"
        android:hint="Ej: example@gmail.com"
        android:textSize="@dimen/text_main" />

    <Button
        android:id="@+id/bt_Next"
        android:layout_width="@dimen/width_button"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_view"
        android:text="Siguiente"
        android:textSize="@dimen/text_main"
        android:textColor="@color/text_button"
        android:background="@color/background_button"/>


</LinearLayout>